<h4>Top 10 Most Popular Words</h4>
<br>
<div class="container-fluid">
<canvas id="myChart" width="930" height="300" class="chartjs-render-monitor" style="display: block; width: 930px; height: 300px;"></canvas>
</div>
<br>
<h4>Posts by Date Created</h4>
<br>
<div class="chartjs-render-monitor" >
<%= line_chart Post.group_by_day(:created_at).count %>
</div>
<br>

<h4>Users by Date Created</h4>
<br>
<div class="container-fluid" class="chartjs-render-monitor" style="display: block; width: 930px; height: 300px;">
<%= pie_chart User.group_by_day(:created_at).count %>
</div>
<br>
<script>


var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels:<%= raw @keys.take(10).reverse%>,
        datasets: [{
            label: '# of Occurances',
            data: <%= raw @values.take(10).reverse%>,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)',
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)',
         
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});
</script>